                android:id="@+id/acrobaticsCB"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="@string/skill_acrobatics"
                android:textSize="20sp" />
            <CheckBox
                android:id="@+id/sleightOfHandCB"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="@string/skill_sleight_of_hand"
                android:textSize="20sp" />
