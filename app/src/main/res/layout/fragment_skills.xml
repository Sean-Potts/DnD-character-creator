            <CheckBox
                android:id="@+id/animalHandlingCB"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="@string/skill_animal_handling"
                android:textSize="20sp" />
            <CheckBox
                android:id="@+id/insightCB"
                android:layout_width="match_parent"
